<html>

<head>
    <% content_for :title, "Student" %>
    <%= render 'layouts/headerstudent' %>
</head>

<body>

    <% if false %>
        //This this just comments Below code is for displaying courses and send request

        <% end %>

            <div class="container">
                <% if @status.size == 0 %>

                    <h1 style="text-align: center;">No Elective Courses Regisetred </h1>

                    <% else %>

                        <h2 style="text-align: center;"> Registration Status </h2>
                        <table class="table container_table">
                            <thead>
                                <tr>
                                    <th scope="Elective ID ">Elective ID</th>
                                    <th scope="Elective Name">Elective Name</th>
                                    <th scope="Tutor Name">Tutor Name</th>
                                    <th scope="Department">Department</th>
                                    <th scope="Semester">Semester</th>
                                    <th scope="Status">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @status.each do |course| %>
                                    <tr>
                                        <th>
                                            <%=course.eid %>
                                        </th>
                                        <td>
                                            <%=course.ename %>
                                        </td>
                                        <td>
                                            <%=course.tname %>
                                        </td>
                                        <td>
                                            <%=course.depname%>
                                        </td>
                                        <td>
                                            <%=course.semid %>
                                        </td>
                                        <td>
                                            <% if course.status==0 %>
                                                <h5>Accpeted</h5>
                                            <% elsif course.status==1 %>
                                                <h5> Rejected </h5>
                                            <% elsif course.status==2 %>
                                                <h5> Pending </h5>
                                            <% end %>
                                        </td>
                                    </tr>
                                    <% end %>

                            </tbody>
                        </table>
                        <% end %>
            </div>

</body>

</html>