<html>

<head>
    <% content_for :title, "Student" %>
    <%= render 'layouts/headerstudent' %>
</head>

<body>
    <div class="container">
        <% if @registe.size == 0 %>

            <h1 style="text-align: center;">No Elective Courses Regisetred </h1>

            <% else %>
                <h2 style="text-align: center;"> Registered Courses </h2>
                <table class="table container_table">
                    <thead>
                        <tr>
                            <th scope="Elective ID ">Elective ID</th>
                            <th scope="Elective Name">Elective Name</th>
                            <th scope="Tutor Name">Tutor Name</th>
                            <th scope="Department">Department</th>
                            <th scope="Semester">Semester</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @registe.each do |course| %>
                            <tr>
                                <td>
                                    <%=course.eid %>
                                </td>
                                <td >
                                    <%=course.ename %>
                                </td>
                                <td >
                                    <%=course.tname %>
                                </td>
                                <td >
                                    <%=course.depname%>
                                </td>
                                <td >
                                    <%=course.semid %>
                                </td>
                            </tr>
                            <% end %>

                    </tbody>
                </table>
                <% end -%>
    </div>

</body>

</html>